<div class="box box-primary">
    <div class="box-header with-border">
        {{ product.name }}
    </div>
    <div class="box-body">
        <ul>
            {% for feature in product.features %}
                <li>{{ feature|json_encode }}</li>
            {% endfor %}
        </ul>
        
        <a href="{{ purchaseLink }}" class="btn btn-success open-payment-window" data-product="{{ product.index }}">
            {{ product.price }}
        </a>

        <pre>{{ product|json_encode(constant('JSON_PRETTY_PRINT')) }}</pre>
    </div>
</div>